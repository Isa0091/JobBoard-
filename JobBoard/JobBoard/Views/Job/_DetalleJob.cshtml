@model JobBoard.Models.Job.Input.JobInputViewModel
@{
    Layout = null;
}

<form asp-action="GuardarJob" asp-controller="Job" method="post" id="frmguardarjob">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" asp-for="Codigo" />

    <div class="modal-body">
        <div class="row">

            <div class="form-group col-md-12" style="margin-bottom:5px!important">
                <label asp-for="Titulo">Titulo</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger small form-text"></span>

            </div>
            <div class="form-group col-md-12" style="margin-bottom:5px!important">
                <label asp-for="FechaExpiracionJob">Fecha de expiracion</label>
                <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input asp-for="FechaExpiracionJob" type="text" class="form-control">
                </div>
                <span asp-validation-for="FechaExpiracionJob" class="text-danger small form-text"></span>
            </div>
            <div class="form-group col-md-12" style="margin-bottom:5px!important">
                <label asp-for="Descripcion">Descripcion</label>
                <textarea asp-for="Descripcion" class="form-control" rows="5" cols="4">@Model.Descripcion</textarea>
                <span asp-validation-for="Descripcion" class="text-danger small form-text"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
        <button type="button" class="btn btn-default btn-white" data-dismiss="modal">Cerrar</button>
    </div>
</form>